<div class="form container">
  <%= form_for(@task, remote: true) do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div></br>
    <div class="field">
      <%= f.label :start_on %><br>
      <%= f.date_field :start_on %>
    </div></br>
    <div class="field">
      <%= f.label :due_on %><br>
      <%= f.date_field :due_on %>
    </div></br>
    <div class="field">
      <%= f.hidden_field :completed, value: false %>
    </div></br>
    <div class="actions">
      <%= f.submit "submit" %>
    </div>
    </br>
  <% end %>
</div>
