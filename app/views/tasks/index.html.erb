<div class="header">
  <h1 class="list-title">To-Do List</h1>
</div>
<br>
<div class="container">
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start on</th>
        <th>Due on</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody id="sortable">
      <div id='all-tasks'><%= render @tasks %></div>
    </tbody>
  </table>
  <br>
</div>
<div id="new-form-container"></div>

<div class="bottom-links">
  <%= link_to 'New Task', new_task_path, remote: true, class: "btn btn-primary active" %>
  <%= link_to 'View Completed Tasks', tasks_review_path, class: "btn btn-primary active" %>
</div>
